link(
  rel='stylesheet prefetch'
  property='stylesheet'
  href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'
)
link(
  rel='stylesheet prefetch'
  property='stylesheet'
  href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css'
)

//- Intentionally exclude html, head and body tags to make syncing with codepen become a lot easier.

div(ng-app='exampleApp')
  .col-lg-4
    div(ng-controller='ExampleController as exampleCtrl1')
      .panel.panel-default
        .panel-body
          form(name='exampleCtrl1.entityForm')
            .form-group.has-feedback
              label.control-label(for='amount') Amount
              input#amount.form-control.text-right(
                name='amount'
                required=''
                ng-model='exampleCtrl1.entity.amount'
                type='text'
                data-content='{{ exampleCtrl1.entity.amount | number }}'
                sh-number-format=''
              )
              span.form-control-feedback
            pre $valid: {{exampleCtrl1.entityForm.amount.$valid | json}}
            pre $error: {{exampleCtrl1.entityForm.amount.$error | json}}
  .col-lg-4
    div(ng-controller='ExampleController as exampleCtrl2')
      .panel.panel-default
        .panel-body
          form(name='exampleCtrl2.entityForm')
            .form-group.has-feedback
              label.control-label(for='amount') Amount
              input#amount.form-control.text-right(
                name='amount'
                required=''
                ng-model='exampleCtrl2.entity.amount'
                type='text'
                data-content='{{ exampleCtrl2.entity.amount | number }}'
                sh-number-format=''
                sh-min='0'
              )
              span.form-control-feedback
            pre $valid: {{exampleCtrl2.entityForm.amount.$valid | json}}
            pre $error: {{exampleCtrl2.entityForm.amount.$error | json}}
  .col-lg-4
    div(ng-controller='ExampleController as exampleCtrl3')
      .panel.panel-default
        .panel-body
          form(name='exampleCtrl3.entityForm')
            .form-group.has-feedback
              label.control-label(for='amount') Amount
              input#amount.form-control.text-right(
                name='amount'
                required=''
                ng-model='exampleCtrl3.entity.amount'
                type='text'
                data-content='{{ exampleCtrl3.entity.amount | number }}'
                sh-number-format=''
                sh-allow-zero='false'
                sh-greater-than='-10'
              )
              span.form-control-feedback
            pre $valid: {{exampleCtrl3.entityForm.amount.$valid | json}}
            pre $error: {{exampleCtrl3.entityForm.amount.$error | json}}


